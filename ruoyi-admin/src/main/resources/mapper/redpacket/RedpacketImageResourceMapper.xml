<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.redpacket.mapper.RedpacketImageResourceMapper">
    
    <resultMap type="RedpacketImageResource" id="RedpacketImageResourceResult">
        <result property="id"    column="id"    />
        <result property="resourceName"    column="resource_name"    />
        <result property="resourceKey"    column="resource_key"    />
        <result property="fileName"    column="file_name"    />
        <result property="filePath"    column="file_path"    />
        <result property="usageScene"    column="usage_scene"    />
        <result property="description"    column="description"    />
    </resultMap>

    <sql id="selectRedpacketImageResourceVo">
        select id, resource_name, resource_key, file_name, file_path, usage_scene, description from redpacket_image_resource
    </sql>

    <select id="selectRedpacketImageResourceList" parameterType="RedpacketImageResource" resultMap="RedpacketImageResourceResult">
        <include refid="selectRedpacketImageResourceVo"/>
        <where>  
            <if test="resourceName != null  and resourceName != ''"> and resource_name like concat('%', #{resourceName}, '%')</if>
            <if test="resourceKey != null  and resourceKey != ''"> and resource_key like concat('%', #{resourceKey}, '%')</if>
            <if test="usageScene != null  and usageScene != ''"> and usage_scene = #{usageScene}</if>
        </where>
    </select>
    
    <select id="selectRedpacketImageResourceById" parameterType="Long" resultMap="RedpacketImageResourceResult">
        <include refid="selectRedpacketImageResourceVo"/>
        where id = #{id}
    </select>

    <insert id="insertRedpacketImageResource" parameterType="RedpacketImageResource" useGeneratedKeys="true" keyProperty="id">
        insert into redpacket_image_resource
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="resourceName != null and resourceName != ''">resource_name,</if>
            <if test="resourceKey != null and resourceKey != ''">resource_key,</if>
            <if test="fileName != null and fileName != ''">file_name,</if>
            <if test="filePath != null and filePath != ''">file_path,</if>
            <if test="usageScene != null">usage_scene,</if>
            <if test="description != null">description,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="resourceName != null and resourceName != ''">#{resourceName},</if>
            <if test="resourceKey != null and resourceKey != ''">#{resourceKey},</if>
            <if test="fileName != null and fileName != ''">#{fileName},</if>
            <if test="filePath != null and filePath != ''">#{filePath},</if>
            <if test="usageScene != null">#{usageScene},</if>
            <if test="description != null">#{description},</if>
         </trim>
    </insert>

    <update id="updateRedpacketImageResource" parameterType="RedpacketImageResource">
        update redpacket_image_resource
        <trim prefix="SET" suffixOverrides=",">
            <if test="resourceName != null and resourceName != ''">resource_name = #{resourceName},</if>
            <if test="resourceKey != null and resourceKey != ''">resource_key = #{resourceKey},</if>
            <if test="fileName != null and fileName != ''">file_name = #{fileName},</if>
            <if test="filePath != null and filePath != ''">file_path = #{filePath},</if>
            <if test="usageScene != null">usage_scene = #{usageScene},</if>
            <if test="description != null">description = #{description},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRedpacketImageResourceById" parameterType="Long">
        delete from redpacket_image_resource where id = #{id}
    </delete>

    <delete id="deleteRedpacketImageResourceByIds" parameterType="String">
        delete from redpacket_image_resource where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>